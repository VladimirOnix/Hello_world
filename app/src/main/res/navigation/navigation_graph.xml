<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.hello_world.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_inputsFragment"
            app:destination="@id/inputsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_checkFragment"
            app:destination="@id/checkFragment" />
        <action
            android:id="@+id/action_mainFragment_to_buttonsFragment"
            app:destination="@id/buttonsFragment" />
    </fragment>
    <fragment
        android:id="@+id/buttonsFragment"
        android:name="com.example.hello_world.ButtonsFragment"
        android:label="fragment_buttons"
        tools:layout="@layout/fragment_buttons" >
        <action
            android:id="@+id/action_buttonsFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkFragment"
        android:name="com.example.hello_world.CheckFragment"
        android:label="fragment_check"
        tools:layout="@layout/fragment_check" >
        <action
            android:id="@+id/action_checkFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputsFragment"
        android:name="com.example.hello_world.InputsFragment"
        android:label="fragment_inputs"
        tools:layout="@layout/fragment_inputs" >
        <action
            android:id="@+id/action_inputsFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>